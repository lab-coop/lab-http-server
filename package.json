{
  "name": "lab-http-server",
  "version": "0.0.1",
  "description": "Lab HTTP server service ",
  "main": "index.js",
  "scripts": {
    "test": "npm-watch",
    "test:safe": "npm run test:features:safe && npm run test:mocha:safe",
    "test:mocha": "mocha */*.spec.js --colors",
    "test:mocha:safe": "npm run test:mocha 2> /dev/null || exit 0",
    "test:features": "cucumber-js features/*.feature",
    "test:features:safe": "npm run test:features || exit 0"
  },
  "watch": {
    "test:safe": {
      "patterns": [
        "**"
      ],
      "extensions": [
        "js",
        "json",
        "feature"
      ],
      "ignore": [
        "node_modules"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "mocha": "^3.1.0",
    "npm-watch": "^0.1.6"
  }
}
